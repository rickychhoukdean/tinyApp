<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(!user){ %>

        <form action="/register" method="GET">
          <div class="username"><%=user%></div>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <form action="/login" method="GET">
          <div class="username"><%=user%></div>
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <% } else{ %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="username">You are logged in as <%=users[user].email%>!</div>
          <button type="submit" class="btn btn-primary">Log Out</button>
        </form>
        <% }%>
      </div>
    </div>
  </nav>
</header>
